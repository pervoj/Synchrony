# EditorConfig <https://EditorConfig.org>
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = tab
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
tab_width = 4

[{meson.build, *.blp, *.css, *.xml, *.xml.in, *.md, *.html, *.yml}]
tab_width = 2
