{
    "app-id" : "app.drey.Synchrony.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.golang"
    ],
    "command" : "synchrony",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "rclone",
            "buildsystem" : "simple",
            "build-options" : {
                "env" : [
                    "GOBIN=/app/bin",
                    "GOROOT=/usr/lib/sdk/golang",
                    "GOFLAGS=-modcacherw",
                    "GOPATH=/run/build/rclone/gopath"
                ],
                "append-path" : "/usr/lib/sdk/golang/bin",
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "make rclone",
                "install -Dm755 rclone -t ${FLATPAK_DEST}/bin/",
                "install -Dm644 rclone.1 -t ${FLATPAK_DEST}/share/man/man1/",
                "install -Dm644 MANUAL.{html,md,txt} -t ${FLATPAK_DEST}/share/doc/"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/rclone/rclone.git",
                    "tag" : "v1.58.0",
                    "commit" : "f9354fff2fcd8e58a4b2581506c3f80702f148b9"
                }
            ]
        },
        {
            "name" : "blueprint",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "synchrony",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
